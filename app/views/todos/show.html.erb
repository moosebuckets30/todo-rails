<img src="<%=@todo[:image]%>" height="250" width="250"
<p>Do at <time>8:30</time> every morning.</p>
<h1>Todo <%= @todo[:id]%></h1>
<p><%= @todo.name%></p>
<p><%= @todo.description%></p>
<p><%= @todo.duration%> mins</p>
completed <%= @todo.complete%>

 <form  action="/todos/<%=@todo.id%>"method="POST" method="POST">
  <input type= "hidden" name="authenticity_token" value= "<%= form_authenticity_token %>"/>
  Name: <input type= "text" name="name" value="<%=@todo.name%>"/>
  Description: <input type= "text" name="<%=@todo.description%>"/>
  Estimated time: <input type="number" name="<%=@todo.duration%>"/>
  Completed: <input type="checkbox" name="<%=@todo.complete ? 'checked': '' %>"/>
  
  <input type="submit"/>
            
            
 </form>

 

 
  